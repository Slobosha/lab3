def gen_bin_tree(height=None, root=None):
    """
    Рекурсивно генерирует бинарное дерево.

    Каждый узел представлен словарем: {str(root): [left_leaf,right_leaf]}

    Args:
        height (int): Высота дерева.
        root (int): Значение корневого узла.

    Возвращает:
        dict: Словарь, представляющий дерево.
    """
    if height==None:
        height=6
    if root==None:
        root=15
    
    if height < 0:
        return {}
    if height == 0:
        return {str(root): []}
    
    left_value = 2 * (root + 1)
    right_value = 2 * (root - 1)
    left_leaf = gen_bin_tree(height - 1, left_value)
    right_leaf = gen_bin_tree(height - 1, right_value)

    return {str(root): [left_leaf, right_leaf]}
